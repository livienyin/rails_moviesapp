
<h2>
  <%= @detail["Title"] %>
  (<%= @detail["Year"] %>)
</h2>
<% if @detail["Poster"].nil? || @detail["Poster"] == "N/A" %>
<img src="" alt ="No Image Found" title="No Poster Found">
<% else %>
<img src="<%= @detail["Poster"] %>" 
alt="Movie poster for <%= @detail["Title"] %>" 
title="Movie poster for <%= @detail["Title"] %>">
<% end %>
<p>
  <%= @detail["Plot"] %>
</p>
<dl>
  <dt>
    Rating
  </dt>
  <dd>
    <%= @detail["Rated"] %>
  </dd>
  <dt>
    Runtime
  </dt>
  <dd>
    <%= @detail["Runtime"] %>
  </dd>
  <dt>
    Genre
  </dt>
  <dd>
    <%= @detail["Genre"] %>
  </dd>
  <dt>
    IMDB Rating
  </dt>
  <dd>
    <%= @detail["imdbRating"] %>
  </dd>
  
  <dt>
    Rotten Tomatoes Rating
  </dt>
  <dd>
    <%= @detail["tomatoRating"] %>
  </dd>

  <dt>
    Actor<%= @actors.length > 1 ? "s" : "" %>
  </dt>
  <dd>
    <ul>
      <% @actors.each do |actor| %>
      <li><%= actor %></li>
      <% end %>
    </ul>
  </dd>
  
  <dt>
    Director<%= @directors.length > 1 ? "s" : "" %>
  </dt>
  <dd>
    <ul>
      <% @directors.each do |director| %>
      <li><%= director %></li>
      <% end %>
    </ul>
  </dd>
</dl>
